# Production-ready profile enabling autonomous trading loop
APP_ENV=prod
APP_PORT=8000
ENABLE_BG_TASKS=1

# Auto trader defaults (can be overridden per deployment)
AUTO_TRADER_ENABLED=1
AUTO_TRADER_SYMBOLS=BTCUSDT,ETHUSDT
AUTO_TRADER_TIMEFRAME=15m
AUTO_TRADER_QUOTE_USDT=50
AUTO_TRADER_SMA_FAST=20
AUTO_TRADER_SMA_SLOW=50
AUTO_TRADER_CONFIRM_ON_CLOSE=1
AUTO_TRADER_SELL_ON_DEATH=1
AUTO_TRADER_TESTNET=1

# Risk / reconciliation safety nets
RECONCILE_AT_START=1
RECONCILE_PERIODIC=1
RECONCILE_INTERVAL_SEC=300
RECONCILE_AUTO_FIX=0

# Leave Binance credentials in secrets or environment overrides
